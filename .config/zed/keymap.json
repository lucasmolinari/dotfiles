// documentation: https://zed.dev/docs/key-bindings
[
  // general
  {
    "context": "!Editor",
    "bindings": {
      "ctrl-p": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-k ctrl-s": null
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space g b": "editor::ToggleGitBlameInline",
      "space i h": "editor::ToggleInlayHints",
      "space i d": "editor::ToggleInlineDiagnostics",
      "space f b": "editor::ToggleFold",
      "space -": "workspace::ToggleLeftDock",
      "space q": "diagnostics::Deploy",
      "space n": "editor::GoToDiagnostic",
      "space p": "editor::GoToPreviousDiagnostic",
      "space z": "workspace::ToggleZoom"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "p": ["vim::Paste", { "preserve_clipboard": true }]
    }
  },
  // search
  {
    "context": "vim_mode == normal || !Editor",
    "bindings": {
      "space s f": "file_finder::Toggle",
      "space s g": "pane::DeploySearch",
      "space d s": "project_symbols::Toggle"
    }
  },
  // lsp
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space r n": "editor::Rename",
      "space c a": "editor::ToggleCodeActions",
      "shift-k": "editor::Hover",
      "g d": "editor::GoToDefinition"
    }
  },
  // buffers
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "space b d": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-k ctrl-s": "zed::OpenKeymap"
    }
  }
]
